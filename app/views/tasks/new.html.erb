<div class="container">
  <h1>Create a new task</h1>
  <%= form_with model: @task, class: "form-group" do |f| %>
    <div class="mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :details %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <div class="form-check">
        <%= f.label :completed %>
        <%= f.check_box :completed, class: "form-check-input" %>
    </div>
    <div>
     <%= f.submit 'Create', class: "btn btn-primary text-decoration-none mt-3" %>
    </div>
  <% end %>
  <%= link_to 'Return to the main menu', tasks_path, class: "btn btn-info text-decoration-none mt-4" %>
</div>
